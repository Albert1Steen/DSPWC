  <script>
    function calculateTotal(){
      // Get the values for Iron Ingots
      var Ir = document.getElementById("Ir").value;
      // Get the values for Copper Ingots
      var Copper_Ingot = document.getElementById("Copper_Ingot").value;
      // Get the values for Steel
      var Steel = document.getElementById("Steel").value;

      // Note: items and machines are calculated with a 1x speed efficiency and a 1x resource efficiency. (Any proliferated items and/or faster/slower machines are not calculated)
      // set the recipe for iron ingots
      var Ir_ore = Ir * 1;
      var Ir_M = Ir * 1;
       // set the price for copper ingots
      var Copper_Ore = Copper_Ingot * 1;
      var Copper_Ingot_Machines = Copper_Ingot * 1;
      // set the recipe for steel
      var St_Ir = St * 3;
      var St_M = St * 3;
      var St_Ir_Ore = St_Ir;
      var St_Ir_M = St_Ir;
      // set the recipe for 
      // Initialize the output string
      var output = "";

      // Check if there is an input for iron ingots
      if (Ir > 0) {
        output += Ir + " iron ingot &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; " + Ir_M + " smelters <br> -" + Ir_ore + "iron ore <br>";
      }

      // Check if there is an input for steel
      if (Steel > 0) {
        output += Steel + " Steel &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; " + Steel_Machines + " smelters <br> -" + Steel_Iron_Ingot + " Iron ingots &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;" + Steel_Iron_Ingot_Machines + " smelters <br> --" + Steel_Iron_Ore + " Iron ores <br>";
      }

      // Check if there is an input for copper ingots
      if (Copper_Ingot > 0) {
        output += Copper_Ingot + " copper ingots  " + Copper_Ingot_Machines + " smelters <br> -" + Copper_Ore + " copper ores <br>";
      }

      

      // Display the grand total on the page
      document.getElementById("total").innerHTML = output;
    }     
</script>
